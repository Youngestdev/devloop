<% include partials/header %>

<div class="ui main container text segment">
  <div class="ui huge header"><%= blog.title %></div>

  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.imgUrl %>" alt="Picture of <%= blog.title %>">

      <div class="content">
        <span>Created: <%= blog.createdAt.toDateString() %></span>
      </div>

      <div class="description">
        <p><%- blog.body %></p>
      </div>
    </div>
    <a href="/blogs/<%= blog._id %>/edit" class="ui pink basic button">Edit Post</a>
    <a href="/blogs/<%= blog._id %>" class="ui pink basic button">Remove Post</a>
  </div>
</div>

<% include partials/footer %>